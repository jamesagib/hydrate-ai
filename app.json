{
  "expo": {
    "name": "Water AI",
    "slug": "hydrate-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#F2EFEB"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hydrate.ai",
      "buildNumber": "47",
      "usesAppleSignIn": true,
      "icon": "./assets/icon.png",
      "entitlements": {
        "com.apple.developer.applesignin": [
          "Default",
          "Default"
        ],
        "aps-environment": "development"
      },
      "infoPlist": {
        "NSUserAuthenticationUsageDescription": "Sign in with Apple is used to authenticate your account.",
        "NSUserNotificationUsageDescription": "We'll send you personalized hydration reminders to help you stay healthy and hydrated throughout the day.",
        "NSCameraUsageDescription": "Camera access is used to scan and analyze your drinks for automatic hydration tracking.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "com.googleusercontent.apps.786448900175-t4l077b9dii6m9fp4e716ro93vnj9lqq"
            ]
          },
          {
            "CFBundleURLSchemes": [
              "com.googleusercontent.apps.786448900175-t4l077b9dii6m9fp4e716ro93vnj9lqq"
            ]
          },
          {
            "CFBundleURLName": "com.hydrate.ai",
            "CFBundleURLSchemes": [
              "hydrate-ai"
            ]
          }
        ]
      },
      "runtimeVersion": "1.0.0"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#F2EFEB"
      },
      "package": "com.hydrate.ai",
      "runtimeVersion": {
        "policy": "appVersion"
      },
      "permissions": [
        "android.permission.CAMERA"
      ]
    },
    "scheme": "water-ai",
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-apple-authentication",
      "expo-image-picker",
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 26
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff"
        }
      ],
      [
        "expo-quick-actions",
        {
          "iosActions": [
            {
              "id": "log-water",
              "title": "Log Water",
              "subtitle": "Quickly log your water intake",
              "icon": "symbol:drop.fill",
              "params": {
                "href": "/tabs/home"
              }
            },
            {
              "id": "stats",
              "title": "View Stats",
              "subtitle": "Check your hydration progress",
              "icon": "symbol:chart.bar.fill",
              "params": {
                "href": "/tabs/stats"
              }
            },
            {
              "id": "settings",
              "title": "Settings",
              "subtitle": "Manage your preferences",
              "icon": "symbol:gear",
              "params": {
                "href": "/tabs/settings"
              }
            },
            {
              "id": "feedback",
              "title": "Need Help?",
              "subtitle": "DM the founder on X",
              "icon": "symbol:message.fill",
              "params": {
                "href": "https://x.com/agibjames"
              }
            }
          ]
        }
      ]
    ],
    "experiments": {
      "tsconfigPaths": true,
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "b4f22400-7632-4de3-bcd1-76119d301f5d"
      }
    },
    "owner": "jamesagib",
    "updates": {
      "url": "https://u.expo.dev/b4f22400-7632-4de3-bcd1-76119d301f5d"
    }
  }
}
